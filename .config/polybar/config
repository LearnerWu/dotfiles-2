include-file = ~/.config/polybar/colors
include-file = ~/.config/polybar/modules

[bar/base]
override-redirect = false
enable-ipc = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 20
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0
offset-x = 0
padding = 1

font-0 = "JetBrainsMono Nerd Font Mono:style=Regular:pixelsize=12,2"

modules-right = alsa date
modules-center = i3
modules-left =  
; Position of the system tray window
tray-position = left
tray-maxsize = 15
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
; Pad the sides of each tray icon
tray-padding = 1

label-monocle = M 
label-tiled = T
label-floating = F
label-pseudotiled = P

[bar/0]
inherit = bar/base
monitor = ${env:MONITOR:}
modules-right = alsa date

[bar/1]
inherit = bar/base
monitor = ${env:MONITOR:}
modules-right = cpu memory
tray-position = none


[settings]
label-focused-underline= ${colors.background}
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = true
